<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="8dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:layout_margin="8dp"
        android:paddingBottom="30dp"
        android:id="@+id/session_constraint_layout"
        >

        <include layout="@layout/excersize_better" android:id="@+id/exersize_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <include
            android:id="@+id/exersize_2"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_1"
            android:layout_marginTop="16dp"
            />


        <include
            android:id="@+id/exersize_3"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_2"
            android:layout_marginTop="16dp"
            />

        <include
            android:id="@+id/exersize_4"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_3"
            android:layout_marginTop="16dp"
            />


        <include
            android:id="@+id/exersize_5"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_4"
            android:layout_marginTop="16dp"
            />


        <include
            android:id="@+id/exersize_6"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_5"
            android:layout_marginTop="16dp"
            />

        <include
            android:id="@+id/exersize_7"
            layout="@layout/excersize_better"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exersize_6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>